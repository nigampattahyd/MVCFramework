        function EditMenus() {
            
            if ($('#tblMenus input[name="chkItem"]:checked').length > 0) {
                if ($('#tblMenus input[name="chkItem"]:checked').length > 1) {
                    alert("Please Select One Record Only.");
                }
                else {
                    var id = $('#tblMenus input[name="chkItem"]:checked').attr('data-value-1');
                    window.location.href = "Menus/EditMenu?MenuId=" + id;
                }
            }
            else
                alert("Please Select atleast One Record Only.");
        }

        function DeleteMenus(MenuId) {
            
