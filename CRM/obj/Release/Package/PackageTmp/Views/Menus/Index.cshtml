        function deleteSelectedMenu() {
            
            if ($('#tblMenus input[name="chkItem"]:checked').length > 0) {
                var flag = confirm('You are about to delete permanently.Are you sure you want to delete these records?');
                if (flag) {
                    $('#tblMenus input[name="chkItem"]:checked').each(function () {
                        
                        var id = $(this).attr('data-value-1');
                        DeleteMenus(id);
                    });
                    document.location.href = document.location.href;
                    alert("Deleted Successfully");
                }
            }
            else {
                alert("Please select item(s) to delete.");
            }
        }


