    function deleteEachCompany(AccountId) {

        $.ajax({
            url: "ManageCompany/DeleteCompanies",
            type: "POST",
            async: false,
            data: { Compids: AccountId.toString() },
            success: function (data) {
                if (data == "True") {
                    $.growl.notice({ title: "Success", message: "Companies Deleted Successfully.", size: 'large' });
