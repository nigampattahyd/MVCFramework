@model CRMHub.ViewModel.BranchModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content-wrapper">
    <div id="CustomBootstrapAlertBox">
    </div>
    <div class="row">


        <div class="panel">
            <div class="panel-heading">
                <div class="row">
                    <!-- Page header, center on small screens -->
                    <h1 class="col-xs-6 col-sm-4 text-left text-left-sm panel-title"><i class="fa fa-users page-header-icon"></i>&nbsp; Office List</h1>
                    <div class="col-xs-6 col-sm-8">
                        <div class="row">
                            <div class="pull-right">
                                @*<a href="#" class="btn btn-flat btn-labeled btn-primary" tabindex="-1"
                                    data-toggle="modal" data-target="#uidemo-modals-alerts-info"><span class="btn-label icon fa fa-question-circle"></span>Help</a>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-body">


                <div class="row">

                    <div class="tab-pane" id="bs-tabdrop-tab3">
                        <div class="row">
                            <!-- col-sm-6 -->
                            <div class="col-sm-12" id="pnlSrchCriteria">
                                <div class="col-sm-3">
                                    <div class="form-group no-margin-hr">
                                        <label class="control-label">Keyword :</label>
                                        @Html.TextBoxFor(m => m.branch.Keyword, new { @id = "txtKeyWord", @class = "form-control input-sm", @maxlength = "100" })

                                    </div>
                                </div>

                                <div class="col-sm-3">
                                    <div class="form-group no-margin-hr">
                                        <label class="control-label">Name :</label>
                                        @Html.TextBoxFor(m => m.branch.Name, new { @id = "txtName", @class = "form-control input-sm" })

                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group no-margin-hr">
                                        <label class="control-label">Zip Code :</label>
                                        @Html.TextBoxFor(m => m.branch.Zip, new { @id = "txtZipCode", @class = "form-control input-sm" })

                                    </div>
                                </div>
                                <div class="col-sm-3">
                                </div>
                                <div class="col-sm-3" id="tdStaffingManager" runat="server">
                                    <div class="form-group no-margin-hr">
                                        <label class="control-label">City :</label>
                                        @Html.TextBoxFor(m => m.branch.City, new { @id = "txtCity", @class = "form-control input-sm" })

                                    </div>
                                </div>

                                <div class="col-sm-3">
                                    <div class="form-group no-margin-hr">
                                        <label class="control-label">
                                            State:
                                        </label>
                                        @Html.DropDownListFor(m => m.branch.StateName, new SelectList(Model.getListOfStates, "stateCode", "stateName"), new { @class = "form-control input-sm", @id = "drpState" })

                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group no-margin-hr">
                                        <label class="control-label">Phone :</label>
                                        @Html.TextBoxFor(m => m.branch.Phone, new { @id = "txtPhone", @class = "form-control input-sm", @onkeypress = "return onlynumbers(event,this);", @onblur = "formatPhone(this);", @maxlength = "20" })

                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group no-margin-hr">
                                        <label class="control-label">Email :</label>
                                        @Html.TextBoxFor(m => m.branch.Email, new { @id = "txtEmail", @class = "form-control input-sm" })

                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-3 text-right text-left-sm" id="search_btn" style="padding-left:0px">
                                    <button class="btn btn-flat btn-labeled btn-primary" id="btnSearch">
                                        <span class="btn-label icon fa fa-search"></span>Search
                                    </button>
                                </div>


                            </div>
                            <div class="clearfix"></div>
                            <div class="col-sm-13" id="filter"></div>

                            <!-- col-sm-6 -->
                            <div class="col-sm-12">


                                <div class="col-sm-12" style="background-color: #f5f5f5; padding-top: 6px; padding-bottom: 6px; text-align: right;">
                                    <ul class="table-nav-item">




                                        <li class="btn btn-flat btn-labeled btn-primary" id="btnmargin_top">

                                            <a style="color: #fff; text-decoration: none; padding: 0px; font-weight: normal" id="btnAdd" href="@Url.Action("CreateOffice","Office")">
                                                <span class="btn-label icon  fa fa-pencil-square-o" style="margin-right:6px;"> </span>
                                                Create Office / Location
                                            </a>

                                        </li>




                                        <li class="btn btn-flat btn-labeled btn-primary" id="btnmargin_top">

                                            <a style="color: #fff; text-decoration: none; padding: 0px; font-weight: normal" id="DeleteContacts" onclick="deleteSelectedBranch()">
                                                <span class="btn-label icon fa fa-trash-o" style="margin-right:6px;"> </span>
                                                Delete Office / Location
                                            </a>

                                        </li>


                                    </ul>

                                </div>

                            </div>
                            <div class="col-sm-12 col-xs-12">
                                <div class="table-primary table-striped">
                                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="tblOffice" width="100%">
                                        <thead>
                                            <tr>

                                                <th><input type="checkbox" id="chkHeader" /></th>
                                                <th></th>
                                                <th data-hide="tablet,tabletlandscape,phone">Office</th>
                                                <th data-class="expand">Address</th>
                                                <th data-hide="tablet,tabletlandscape,phone">Phone</th>
                                                <th data-class="tablet,tabletlandscape,phone">City</th>
                                                <th data-hide="tablet,tabletlandscape,phone">State</th>

                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- /11. $BOOTSTRAP_TAB_DROP -->
        <!-- / Info -->
    </div>
</div>
<style>
    .DT-search, .DT-search input {
        display: none;
    }

    .DT-per-page {
        border-right: 1px solid #eee;
        margin-right: -1px;
        height: 23px;
        padding-right: 15px;
        white-space: nowrap;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {


        $('#txtPhone').bind("cut copy paste", function (e) {
            e.preventDefault();
        });

        
        //width: 130px !important;
        //  $(".DT-search").hide();
        //$('#tblOffice').dataTable(
        //    {
        //        "aLengthMenu": [[10, 25, 50], [10, 25, 50]],
        //        "columnDefs": [{ targets: 'no-sort', orderable: false, targets: [0, 1] }]
        //    }

        //    );

        BindBranchList();
        $('#tblOffice').on('length.dt', function (e, settings, len) {

            $('#loading').css('display', 'block');

        });

        $('#tblOffice').on('page.dt', function () {

            $('#loading').css('display', 'block');
        });

        $('#loading').css('display', 'none');

    });




    function BindBranchList() {
        var responsiveHelper = undefined;
        var breakpointDefinition = {
            tablet: 1024,
            tabletlandscape: 768,
            phone: 480
        };
        var tableElement = $('#tblOffice');

        tableElement.dataTable({
            autoWidth: false,
            preDrawCallback: function () {
                if (!responsiveHelper) {
                    responsiveHelper = new ResponsiveDatatablesHelper(tableElement, breakpointDefinition);
                }
            },
            rowCallback: function (nRow) {
                responsiveHelper.createExpandIcon(nRow);
            },
            drawCallback: function (oSettings) {
                responsiveHelper.respond();
            },
            // "order": [[$("#HD_SortValue").val(), "" + $("#HD_SortDirection").val() + ""]],
            "aLengthMenu": [[10, 25, 50], [10, 25, 50]],
            //"iDisplayStart": parseInt($("#HD_PageIndex").val()),
            //"iDisplayLength": parseInt($("#HD_PageSize").val()),
            //"oSearch": { "sSearch": $("#HD_SearchString").val() },

            "pagingType": "full_numbers",

            "bFilter": false,
            //"processing": true,
            "serverSide": true,

            "sAjaxSource": "Office/getBranch",
            "fnServerParams": function (aoData) {
                aoData.push(
                    { "name": "b_keyword", "value": "" + $("#txtKeyWord").val() + "" },
                    { "name": "b_Name", "value": "" + $("#txtName").val() + "" },
                    { "name": "b_Zip", "value": "" + $("#txtZipCode").val() + "" },

                    { "name": "b_City", "value": "" + $("#txtCity").val() + "" },
                    { "name": "b_state", "value": "" + $("#drpState").val() + "" },
                    { "name": "b_Phone", "value": "" + $("#txtPhone").val() + "" },
                    { "name": "b_email", "value": "" + $("#txtEmail").val() + "" }
                    //{ "name": "ContactSkillId", "value": "" }
                    );

            },
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": 'json',
                    "contentType": "application/json; charset=utf-8",
                    "type": "GET",
                    "url": sSource,
                    "data": aoData,
                    "success":
                                function (msg) {
                                    //var json = jQuery.parseJSON(msg.d);
                                    fnCallback(msg);
                                    //$("#jq-datatables-example").show();
                                }
                });
            },
            "asStripeClasses": ['odd gradeX', 'even gradeC'],
            "aoColumnDefs": [
                {
                    "targets": [0], "visible": true, "bSortable": false, "mDataProp": "BranchId",
                    "render": function (data, type, row) {
                        if (row["BranchId"] != 1) {
                            return "<input type=\"checkbox\" name=\"chkItem\" class=\"case\" id=\"chkRow_" + row["BranchId"] + "\"  data-branchid=\"" + row["BranchId"] + "\"    />";
                        }
                        else {
                            return "";
                        }
                    }
                },
                 {
                     "targets": [1], "visible": true, "bSortable": false,
                     "render": function (data, type, row) {

                         if (row["BranchId"] != 1) {
                             //return "<input type=\"checkbox\" name=\"chkitems\" class=\"case\" id=\"chkRow_" + row["UserId"] + "\"  data-UserId=\"" + row["UserId"] + "\" data-RoleName=\"" + row["roleName"] + "\"/>";
                             return "<span class=\"fa fa-edit\" onclick=\"OpenBranchDetail('" + row["BranchId"] + "');\"></span><span class=\"fa fa-times\" onclick=\"deleteBranch('" + row["BranchId"] + "');\"></span>";
                         }
                         else {
                             return "<span class=\"fa fa-edit\" onclick=\"OpenBranchDetail('" + row["BranchId"] + "');\"></span>";
                         }

                         
                     }
                 },
                {
                    "targets": [2], "visible": true, "bSortable": true, "mDataProp": "BranchName",

                },
                {

                    "targets": [3], "visible": true, "bSortable": true, "mDataProp": "BranchAddress1",

                },
                { "targets": [4], "visible": true, "bSortable": true, "mDataProp": "BranchPhone" },
                { "targets": [5], "visible": true, "bSortable": true, "mDataProp": "BranchCity" },
                { "targets": [6], "visible": true, "bSortable": true, "mDataProp": "StateName" },

            ],
            "fnDrawCallback": function (oSettings) {

                $('#loading').css('display', 'none');

            }
        }).api();


        $('#tblOffice_wrapper .table-caption').text('');

        // $('#tblOffice_wrapper .dataTables_filter input').attr('placeholder', 'Search...');


    }


    $("#chkHeader").click(function () {
        $(".case").prop("checked", this.checked);
    });
    // if all checkbox are selected, check the selectall checkbox
    // and viceversa
    $('#tblOffice tbody').click(function () {

        if ($('#tblOffice input[name="chkItem"]:checked').length == $('#tblOffice input[name="chkItem"]').length) {
            $("#chkHeader").prop("checked", true);
        } else {
            $("#chkHeader").prop("checked", false);
        }
    });

    $('#btnSearch').click(function () {


        $('#loading').css('display', 'block');
        $("#tblOffice").dataTable().fnDestroy();
        BindBranchList();

        $('#tblOffice').on('length.dt', function (e, settings, len) {

            $('#loading').css('display', 'block');
        });

        $('#tblOffice').on('page.dt', function () {

            $('#loading').css('display', 'block');
        });

    });


    function OpenBranchDetail(branchId) {
        window.location = "Office/EditOffice?branchId=" + branchId;
    }

    function deleteBranch(branchId) {
        var flag = confirm('You are about to delete permanently. Are you sure you want to delete this record?');
        if (flag) {
            deleteEachBranch(branchId);
            document.location.href = document.location.href;
            alert("Deleted Successfully!!!");
        }
    }

    function deleteEachBranch(branchId) {

        $.ajax({
            url: "Office/DeleteBranchByBranchId",
            type: "POST",
            async: false,
            data: { branchId: branchId },
            success: function (data) {
            },
            error: function () {

            }
        });
    }

    //function deleteSelectedBranch() {
    //    var flag = confirm('You are about to delete permanently. Are you sure you want to delete these records?');
    //    if (flag) {
    //        $('#tblOffice input[name="chkItem"]:checked').each(function () {
    //            var id = $(this).attr('data-branchid');
    //            deleteEachBranch(id);
    //        });
    //        document.location.href = document.location.href;
    //        alert("Deleted Successfully!!!");
    //    }

    function deleteSelectedBranch() {

        if ($('#tblOffice input[name="chkItem"]:checked').length > 0) {
            var flag = confirm('You are about to delete permanently.Are you sure you want to delete these records?');
            if (flag) {
                $('#tblOffice input[name="chkItem"]:checked').each(function () {
                    var id = $(this).attr('data-branchid');
                    deleteEachBranch(id);
                });
                document.location.href = document.location.href;
                alert("Deleted Successfully");
            }
        }
        else {
            alert("Please select item(s) to delete.");
        }
    }

    function onlynumbers(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode == 43 || charCode == 32 || charCode == 40 || charCode == 41)
            return true;
        else if (charCode > 31 && (charCode < 45 || charCode > 57 || charCode == 47 || charCode == 46))
            return false;

        return true;
    }
</script>
