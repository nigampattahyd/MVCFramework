<script type="text/javascript">



    $(document).ready(function () {

        var Estimate = '@ViewBag.Estimate';

        if (Estimate != "") {
            $.growl.notice({ title: "Success", message: "Estimate invoice Created Successfully.", size: 'large' });
            //$('#ErrorMessages').html('User Details Updated Successfully.');
        }

        var update = '@ViewBag.update';
        if (update != "") {
            $.growl.notice({ title: "Success", message: "Estimate invoice Updated Successfully.", size: 'large' });
            //$('#ErrorMessages').html('User Details Updated Successfully.');
        }

        var updatePost = '@ViewBag.updatePost';
        if (updatePost != "") {
            $.growl.notice({ title: "Success", message: "Estimate invoice Updated and converted to Invoice Successfully.", size: 'large' });
            //$('#ErrorMessages').html('User Details Updated Successfully.');
        }
        BindEstInvoiceList();
        $('#tblEstInvoice').on('length.dt', function (e, settings, len) {

            $('#loading').css('display', 'block');

        });

        $('#tblEstInvoice').on('page.dt', function () {

            $('#loading').css('display', 'block');
        });

        $('#loading').css('display', 'none');

    });


    function BindEstInvoiceList() {


        var responsiveHelper = undefined;
        var breakpointDefinition = {
            tablet: 1024,
            tabletlandscape: 768,
            phone: 480
        };
        var tableElement = $('#tblEstInvoice');

        tableElement.dataTable({
            autoWidth: false,
            preDrawCallback: function () {
                if (!responsiveHelper) {
                    responsiveHelper = new ResponsiveDatatablesHelper(tableElement, breakpointDefinition);
                }
            },
            rowCallback: function (nRow) {
                responsiveHelper.createExpandIcon(nRow);
            },
            drawCallback: function (oSettings) {
                responsiveHelper.respond();
            },
            // "order": [[$("#HD_SortValue").val(), "" + $("#HD_SortDirection").val() + ""]],
            "aLengthMenu": [[10, 25, 50], [10, 25, 50]],
            //"iDisplayStart": parseInt($("#HD_PageIndex").val()),
            //"iDisplayLength": parseInt($("#HD_PageSize").val()),
            //"oSearch": { "sSearch": $("#HD_SearchString").val() },

            "pagingType": "full_numbers",

            "bFilter": false,
            //"processing": true,
            "serverSide": true,

            "sAjaxSource": "getEstInvoicelist",
            "fnServerParams": function (aoData) {
                aoData.push(
                    //{ "name": "b_keyword", "value": "" + $("#txtKeyWord").val() + "" },
                    //{ "name": "b_Name", "value": "" + $("#txtName").val() + "" },
                    //{ "name": "b_Zip", "value": "" + $("#txtZipCode").val() + "" },

                    //{ "name": "b_City", "value": "" + $("#txtCity").val() + "" },
                    //{ "name": "b_state", "value": "" + $("#drpState").val() + "" },
                    //{ "name": "b_Phone", "value": "" + $("#txtPhone").val() + "" },
                    //{ "name": "b_email", "value": "" + $("#txtEmail").val() + "" }
                    //{ "name": "ContactSkillId", "value": "" }
                    );

            },
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": 'json',
                    "contentType": "application/json; charset=utf-8",
                    "type": "GET",
                    "url": sSource,
                    "data": aoData,
                    "success":
                                function (msg) {
                                    //var json = jQuery.parseJSON(msg.d);
                                    fnCallback(msg);
                                    //$("#jq-datatables-example").show();
                                }
                });
            },
            "asStripeClasses": ['odd gradeX', 'even gradeC'],
            "aoColumnDefs": [
                {
                    "targets": [0], "visible": true, "bSortable": false, "mDataProp": "InvoiceID",
                    "render": function (data, type, row) {
                        return "<input type=\"checkbox\" name=\"chkItem\" class=\"case\" id=\"chkRow_" + row["EstInvoiceID"] + "\"  data-invoiceid=\"" + row["EstInvoiceID"] + "\"    />";

                    }
                },
                 {
                     "targets": [1], "visible": true, "bSortable": false,
                     "render": function (data, type, row) {

                         // if (row["BranchId"] != 1) {
                         //return "<input type=\"checkbox\" name=\"chkitems\" class=\"case\" id=\"chkRow_" + row["UserId"] + "\"  data-UserId=\"" + row["UserId"] + "\" data-RoleName=\"" + row["roleName"] + "\"/>";
                         return "<span class=\"fa fa-edit\" title=\"Edit Estimate\" onclick=\"OpenEstinvoiceDetail('" + row["EstInvoiceID"] + "');\"></span><span class=\"fa fa-times\" title=\"Delete Estimate\" onclick=\"deleteEachEstinvoice('" + row["EstInvoiceID"] + "');\"></span>";
                         //}
                         //else {
                         //    return "<span class=\"fa fa-edit\" onclick=\"OpenBranchDetail('" + row["InvoiceId"] + "');\"></span>";
                         //}


                     }
                 },
                {
                    "targets": [2], "visible": true, "bSortable": true, "mDataProp": "EstInvoiceNo",

                },
                {

                    "targets": [3], "visible": true, "bSortable": true, "mDataProp": "Fname",

                },
                { "targets": [4], "visible": true, "bSortable": true, "mDataProp": "GrandTotal", "sClass": "alignRight" },


                 {
                     "targets": [5], "visible": true, "bSortable": true, "mDataProp": "EstInvStatus",
                     "render": function (data, type, row) {

                         if (row["Posted"] != 1) {

                             return "<a class=\"btn btn-flat btn-labeled btn-primary\" href=\"#\" onclick=\"ConverttoInvoice('" + row["EstInvoiceID"] + "');\"><span class=\"btn-label icon  fa fa-pencil-square-o\" style=\"margin-right:6px;\"> </span>Convert to Invoice</a>";


                         }
                         else {
                             return "Invoiced";
                         }


                     }

                 },


                //{ "targets": [5], "visible": true, "bSortable": true, "mDataProp": "EstInvStatus" },


            ],
            "fnDrawCallback": function (oSettings) {

                $('#loading').css('display', 'none');

            }
        }).api();


        $('#tblEstInvoice_wrapper .table-caption').text('');



    }



    function OpenEstinvoiceDetail(Estinvid) {
        window.location = "EditEstimateInvoice?EstInvoiceId=" + Estinvid;
    }
    function deleteEstinvoice(invId) {

       // alert(invId);
            $.ajax({
                url: "DeleteEachEstimateInvoice",
                type: "POST",
                async: false,
                data: { invoiceid: invId.toString() },
                success: function (data) {
                    // alert(data);
                    if (data == "True") {

                        $("#tblEstInvoice").dataTable().fnDestroy();
                        //document.location.href = document.location.href;
                        //location.reload();
                        BindEstInvoiceList();
                        $.growl.notice({ title: "Success", message: "Estimated Invoice Deleted Successfully", size: 'large' });
                    }
                    else {
                        $.growl.notice({ title: "Fail", message: "Estimated Invoice Not Deleted .", size: 'large' });
                    }
                },
                error: function () {

                }
            });
        }

   // }

    $("#chkHeader").click(function () {
        $('#tblEstInvoice input[name="chkItem"]').prop('checked', this.checked);
    });

    $('#tblEstInvoice input[name="chkItem"]').click(function () {

        if ($('#tblEstInvoice input[name="chkItem"]').length == $('#tblEstInvoice input[name="chkItem"]:checked').length) {
            $("#chkHeader").prop("checked", "checked");
        }
        else if ($('#tblEstInvoice input[name="chkItem"]').length != $('#tblEstInvoice input[name="chkItem"]:checked').length) {
            $('#chkHeader').prop('checked', false);
        }
    });

    function deleteSelectedEstInvoice() {

        if ($('#tblEstInvoice input[name="chkItem"]:checked').length > 0) {
            var flag = confirm('You are about to delete permanently.Are you sure you want to delete these records?');
            if (flag) {

                var searchIDs = $("#tblEstInvoice input:checkbox:checked").map(function () {
                    return $(this).attr("data-invoiceid");
                }).get();

                deleteEstinvoice(searchIDs)
            }
        }
        else {
            alert("Please select item(s) to delete.");
        }
    }

    function deleteEachEstinvoice(Estinvoiceid)
    {
        var Estinvoiceid = Estinvoiceid;
        var flag = confirm('You are about to delete the Invoice permanently.Are you sure you want to delete Invoice ?');
        if (flag) {
            deleteEstinvoice(Estinvoiceid);
        }
    }

    function ConverttoInvoice(Estinvoiceid) {
        var Estinvoiceid = Estinvoiceid;
        $.ajax({
            url: '@Url.Action("ConvertEstimatetoInvoice")',
            async: false,
            type: "GET",
            data: { Estinvoiceid: Estinvoiceid },
            success: function (data) {

                if (data == "True") {
                    var target = '@Url.Action("EstimateInvoice", "Invoice")';
                    window.location = target;
                }

            }
        });
    }

</script>

