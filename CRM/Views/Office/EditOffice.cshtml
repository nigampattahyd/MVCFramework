@model CRMHub.EntityFramework.Branch

@{
    ViewBag.Title = "EditOffice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("UpdateOffice", "Office", FormMethod.Post))
{
    <div id="content-wrapper">
        <div id="CustomBootstrapAlertBox">
        </div>
        <div class="row">
             
                <div class="panel">
                    <div class="panel-body">
                        <div class="row">
                            <div class="page-header">
                                <div class="row">
                                    <!-- Page header, center on small screens -->
                                    <h1 class="col-xs-12 col-sm-3 text-center text-left-sm" id="Headtext"><i class="fa fa-user page-header-icon"></i>&nbsp;&nbsp;Office / Location Detail</h1>
                                    <div class="col-xs-12 col-sm-9">
                                        <div class="row">
                                            <hr class="visible-xs no-grid-gutter-h">
                                            <!-- "Create project" button, width=auto on desktops -->
                                         
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row" id="smtpbutton">
                            <div class="col-sm-12 col-xs-12">
                                <div class="page-header-breadcrumb">
                                  
                                    <div style="float:right;padding:10px;">

                                       
                                         
                                        <button class="btn btn-flat btn-labeled btn-primary" id="btnSave">
                                            <span class="btn-label icon fa fa-save"></span>Update
                                        </button>

                                      
                                        @*<div class="btn btn-flat btn-labeled btn-primary">
                                            @Html.ActionLink("Back", "Index", "", new { @style = "color:#fff;" })
                                            <span class="btn-label icon fa fa-backward"> </span>
                                        </div>*@
                                        <a style="color: #fff; text-decoration: none; padding: 0px; font-weight: normal" class="btn btn-flat btn-labeled btn-primary" href="@Url.Action("Index", "Office" )">
                                            <span class="btn-label icon fa fa-backward" style="margin-right:6px;"> </span>
                                            Back
                                        </a>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <span id="errorsymbol" style="color:red;display:none;margin-left:5px;" class="fa fa-exclamation-circle"></span><div id="ErrorMessages" style="margin-left:20px;color:red;font-size:15px;margin-top:-19px">

                        </div>
                        <div class="row">
                           
                                <div class="panel-group">
                                    <div class="panel">
                                        <div id="collapse2" class="panel-collapse collapse in" style="height: auto;">
                                            <div class="panel-body">
                                                <div class="row">
                                                    <div class="col-sm-12" style="text-align: right">
                                                        @Html.HiddenFor(m=>m.BranchId)
                                                        <a id="a1" class="buttonclass" style="text-decoration: none; color: white; cursor: pointer" href="#" title="Get Map" onclick="openMap();return false;">Get Map</a>
                                                        <a id="aMail" class="buttonclass" style="text-decoration: none; color: white; cursor: pointer" href="#" title="Email">Email</a>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                     
                                                        <div class="col-sm-3">
                                                            <div class="form-group no-margin-hr">
                                                                <label class="control-label">Office / Location Name :<span style="color: red">*</span></label>
                                                                @Html.TextBoxFor(m => m.BranchName, new { @id = "txtBranchName", @class = "form-control input-sm", @maxlength = "50", @validate = "Required", @data_val_required = "Office / Location Name" })
                                                                @Html.ValidationMessageFor(m => m.BranchName, "")
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-3">
                                                            <div class="form-group no-margin-hr">
                                                                <label class="control-label">Address1 :<span style="color: red">*</span></label>
                                                                @Html.TextBoxFor(m => m.BranchAddress1, new { @id = "txtBranchAddress1", @class = "form-control input-sm", @maxlength = "100", @tabindex = "8", @validate = "Required", @data_val_required = "Address1" })
                                                                @Html.ValidationMessageFor(m => m.BranchAddress1, "")
                                                            </div>
                                                        </div>

                                                        <div class="col-sm-3">
                                                            <div class="form-group no-margin-hr">
                                                                <label class="control-label">Address2 :</label>
                                                                @Html.TextBoxFor(m => m.BranchAddress2, new { @id = "txtBranchAddress2", @class = "form-control input-sm", @maxlength = "100", @tabindex = "9" })
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-3">
                                                            <div class="form-group no-margin-hr">
                                                                <label class="control-label">City :<span style="color: red">*</span></label>
                                                                @Html.TextBoxFor(m => m.BranchCity, new { @id = "txtBranchCity", @class = "form-control input-sm", @maxlength = "50", @tabindex = "10",@validate = "Required", @data_val_required = "City"  })
                                                                @Html.ValidationMessageFor(m => m.BranchCity, "")
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-3">
                                                            <div class="form-group no-margin-hr">
                                                                <label id="lblStateProvince" runat="server" class="control-label">State</label>
                                                                <span style="color: red">*</span>
                                                                @Html.DropDownListFor(m => m.BranchStateCode, ViewBag.StateList as List<SelectListItem>, new { @id = "ddlBranchState", @class = "form-control input-sm", @tabindex = "11", @validate = "dropdown", @data_val_required = "State" })

                                                                    @Html.ValidationMessageFor(m => m.BranchStateCode, "")
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-3">
                                                            <div class="form-group no-margin-hr">
                                                                <label id="lblPostalCode" runat="server" class="control-label">Zipcode</label>
                                                                <span style="color: red">*</span>

                                                                @Html.TextBoxFor(m => m.BranchZip, new { @id = "txtBranchZip", @class = "form-control zipmask", @tabindex = "12",@validate="Required" })
                                                                @Html.ValidationMessageFor(m => m.BranchZip, "")
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-3">
                                                            <div class="form-group no-margin-hr">
                                                                <label class="control-label">Phone :<span style="color: red">*</span></label>

                                                                @Html.TextBoxFor(m => m.BranchPhone, new { @id = "txtBranchMobile", @class = "form-control input-sm", @maxlength = "20", @validate = "Required", @tabindex = "7", @data_val_required = "Phone", @onkeypress = "return onlynumbers(event,this);" })
                                                                @Html.ValidationMessageFor(m => m.BranchPhone, "")
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-3">
                                                            <div class="form-group no-margin-hr">
                                                                <label class="control-label">Fax:</label>

                                                             @Html.TextBoxFor(m => m.BranchFax, new { @id = "txtBranchFax", @class = "form-control input-sm", @MaxLength = "20", @TabIndex = "17", @onkeypress = "return onlynumbers(event,this);" })

                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-3">
                                                            <div class="form-group no-margin-hr">
                                                                <label class="control-label">Type :</label>

                                                                @Html.DropDownListFor(m => m.BranchType, ViewBag.BranchType as List<SelectListItem>, new { @id = "ddlBranchType", @class = "form-control input-sm" })
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-3">
                                                            <div class="form-group no-margin-hr">
                                                                <label class="control-label">Email :</label>
                                                                @Html.TextBoxFor(m => m.BranchEmail, new { @id = "txtBranchEmail", @class = "form-control input-sm", @maxlenght = "50", @tabindex = "13",@type="email" })
                                                                @Html.ValidationMessageFor(m => m.BranchEmail, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-3">
                                                            <div class="form-group no-margin-hr">
                                                                <label class="control-label">Application Routing Email :</label>

                                                                @Html.TextBoxFor(m => m.RoutingEmail, new { @id = "txtRoutingEmail", @maxlength = "50", @class = "form-control input-sm" })
                                                                @Html.ValidationMessageFor(m => m.RoutingEmail, "")
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-3" id="trStateOther">
                                                            <div class="form-group no-margin-hr">
                                                                <label class="control-label">Other :</label>
                                                                @Html.TextBoxFor(m => m.StateOther, new { @id = "txtStateOther", @class = "form-control input-sm", @maxlength = "50"})
                                                                @Html.ValidationMessageFor(m => m.StateOther, "")
                                                            </div>
                                                        </div>
                                                   
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12">
                                                         
                                                            <div class="form-group no-margin-hr">
                                                                <label class="control-label">Comments :</label>
                                                                @Html.TextAreaFor(m => m.Comment, new { @id = "txtBranchComments", @class = "textEditor", @tabindex = "16" })
                                                            
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            
                        </div>
                    </div>
                </div>
            
        </div>
    </div>
}

@section scripts
{
    <script src="~/Scripts/jqte/jquery-te-1.4.0.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('#txtBranchMobile').bind("cut copy paste", function (e) {
                e.preventDefault();
            });

            $('#txtBranchFax').bind("cut copy paste", function (e) {
                e.preventDefault();
            });

            $(".textEditor").jqte();
        });
        $("#btnSave").click(function () {

            return Validate(this.form);
        });
        function onlynumbers(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode == 43 || charCode == 32 || charCode == 40 || charCode == 41)
                return true;
            else if (charCode > 31 && (charCode < 45 || charCode > 57 || charCode == 47 || charCode == 46))
                return false;

            return true;
        }

    </script>

}