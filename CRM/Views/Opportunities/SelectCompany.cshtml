        $(document).ready(function () {

            $('#loading').css('display', 'block');
            BindCompanies();


            $('#jq-datatables-CompanyPopup').on('length.dt', function (e, settings, len) {

                $('#loading').css('display', 'block');
            });

            $('#jq-datatables-CompanyPopup').on('page.dt', function () {

                $('#loading').css('display', 'block');
            });


