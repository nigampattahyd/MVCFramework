<div class="col-sm-12">
    <div class="panel">
        <div class="panel-body">
            <div class="row">
                <div class="page-header">
                    <div class="row">
                        <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-users page-header-icon"></i>&nbsp;&nbsp;Companies</h1>
                        <div class="col-xs-12 col-sm-8">
                            <div class="row">
                                <hr class="visible-xs no-grid-gutter-h">
                                <div class="pull-right">
                                    @*<a href="#" class="btn btn-flat btn-labeled btn-primary" tabindex="-1"
                                       data-toggle="modal" data-target="#uidemo-modals-alerts-info"><span class="btn-label icon fa fa-question-circle"></span>Help</a>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <!-- Tabs -->
                    <div class="tab-pane" id="bs-tabdrop-tab3">
                        <div class="row">
                            <!-- col-sm-6 -->
                            <div class="col-sm-3">
                                <div class="form-group no-margin-hr">
                                    <label class="control-label">Keyword :</label>
                                    <input type="text" id="txtKeyword" class="form-control input-sm" />
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group no-margin-hr">
                                    <label class="control-label">Office :</label>
                                    <select class="form-control" id="ddlBranch">
                                        <option value="">Select</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group no-margin-hr">
                                    <label class="control-label">Sales Representative :</label>
                                    <select class="form-control" id="ddlSalesRepAccount">
                                        <option value="">Select</option>
                                    </select>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-sm-13" id="filter">
                            </div>
                            <!-- col-sm-6 -->
                            <div class="col-sm-12">
                                <div class="col-sm-4" style="background-color: #f5f5f5; padding-top: 10px; padding-bottom: 12px; text-align: left;">
                                    <ul class="table-nav-item">
                                        <li><a id="SearchCompanies" style="padding-left: 0px;" class="fa fa-search" title="Search"></a></li>
                                        <li><a id="btAddCompaniesFilter" class="fa fa-filter" title="Add Filter"></a></li>
                                        <li><a onclick="ClearCompaniesSelection();" class="fa fa-eraser" title="Clear"></a></li>
                                    </ul>
                                </div>
                                <div class="col-sm-8" style="background-color: #f5f5f5; padding-top: 10px; padding-bottom: 12px; text-align: right;">
                                    <ul class="table-nav-item">
                                        <li><a onclick="AddNew();return false;" class="fa fa-file-o" title="Add New"></a></li>
                                        <li><a id="MergeCompanies" class="fa fa-code-fork" title="Merge"></a></li>
                                        <li><a id="DeleteCompanies" class="fa fa-times" title="Delete"></a></li>
                                        <li><a onclick="ExportContactDetail();return false;" class="fa fa-download" title="Export Detail"></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="table-primary table-striped">
                                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="jq-datatables-example" width="100%">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <input class="fa fa-square-o" type="checkbox" id="chkHeader" />
                                                </th>
                                                <th>&nbsp;</th>
                                                <th data-hide="phone">Company ID</th>
                                                <th data-class="expand">Company Name</th>
                                                <th data-hide="tablet,tabletlandscape,phone">Company Site</th>
                                                <th data-hide="phone">Phone Number</th>
                                                <th data-hide="tablet,tabletlandscape,phone">City</th>
                                                <th data-hide="tablet,tabletlandscape,phone">Zip</th>
                                                <th data-hide="tabletlandscape,phone">Date Created</th>
                                                <th data-hide="tablet,tabletlandscape,phone">Type</th>
                                                <th data-hide="tablet,tabletlandscape,phone">Activity</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/CRM/Company.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            BindCompanies();
        });

    </script>
