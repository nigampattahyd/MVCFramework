<script>


    $(".textEditor").jqte();
    $("#btnSave").click(function (e) {
        //Isvalid = true;
        Isvalid = ValidateTypeExistency();
        //return ValidateTypeExistency();
        return Validate(this.form);
    });
    $('#txtContactType').blur(function () {
        return ValidateTypeExistency();
    });
    function ValidateTypeExistency() {

        var HidContType = jQuery.trim($('#HidContactType').val());
        //alert(columnLabel);


        var conttype = jQuery.trim($('#txtContactType').val());

        if (HidContType != conttype) {
            $.ajax({
                url: "CheckContUnique",
                type: "GET",
                async: false,
                data: { ContType: conttype },
                success: function (data) {
                    //alert(data);
                    if (data == true) {
                        $.growl.notice({ title: "Success", message: "Contact Type Already Exists.", size: 'large' });
                        //alert("Contact Type Already Exists ");
                        $('#txtContactType').val(HidContType);
                        return false;
                    }
                    else {
                        return true;
                    }


                },
                error: function () {

                }
            });

        }


    }
</script>